                    </ResourceDictionary.ThemeDictionaries>
                </ResourceDictionary>
            </Grid.Resources>
            <TextBlock Text="Device" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="24,10,0,0"/>
            <TextBlock Text="Summary" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,10,0,0"/>
            <Button x:Name="MemoryButton" Height="48" Width="320" VerticalAlignment="Top" CornerRadius="0"
