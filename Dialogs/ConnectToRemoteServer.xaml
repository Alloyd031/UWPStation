<ContentDialog
    x:Class="UWPStation.Dialogs.ConnectToRemoteServer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPStation.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <x:Double x:Key="ContentDialogMaxWidth">1100</x:Double>
            <Thickness x:Key="ContentDialogPadding">0</Thickness>
        </ResourceDictionary>
    </ContentDialog.Resources>
    <Grid
			x:Name="ContainerGrid"
			Height="300"
            Width="500"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
        <Grid VerticalAlignment="Top" Margin="0,10,0,0">
            <FontIcon Glyph="&#xE192;" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBlock Text="Select the remote server that you want to connect to." Style="{StaticResource CaptionTextBlockStyle}" FontSize="19" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,65,0,0"/>
        </Grid>
        <TextBlock Text="Server name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,116,0,0"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="102,108,0,0" Width="388"/>
        <TextBlock Text="User name:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,190,0,0"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="102,145,0,0" Width="388"/>
        <TextBlock Text="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,153,0,0"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="102,182,0,0" Width="388"/>
        <Button x:Name="ConnectButton" Width="44" Height="44" Margin="397,246,0,0" VerticalAlignment="Top"
                ToolTipService.ToolTip="Connect" Click="ConnectButton_Click">
            <FontIcon Glyph="&#xE703;"/>
        </Button>
        <Button x:Name="CancelButton" Width="44" Height="44" Click="CancelButton_Click" VerticalAlignment="Top" 
                ToolTipService.ToolTip="Cancel" Margin="446,246,0,0">
            <FontIcon Glyph="&#xE10A;"/>
        </Button>
    </Grid>
</ContentDialog>
