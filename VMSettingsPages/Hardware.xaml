                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
                <Grid Margin="-160,-24,-160,-24">
                    <FontIcon Glyph="&#xE964;" Margin="10,7,260,7"/>
                    <TextBlock Text="Memory" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="60,0,0,0"/>
