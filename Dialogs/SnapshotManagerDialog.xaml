<ContentDialog
    x:Class="UWPStation.Dialogs.SnapshotManagerDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPStation.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <x:Double x:Key="ContentDialogMaxWidth">1100</x:Double>
            <Thickness x:Key="ContentDialogPadding">0</Thickness>
        </ResourceDictionary>
    </ContentDialog.Resources>

    <Grid
			x:Name="ContainerGrid"
		    Width="600"
			Height="600"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="44" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid>
            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xF739;" HorizontalAlignment="Left" VerticalAlignment="Center" Height="44" Width="44"/>
            <TextBlock
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Text="Snapshot Manager" Margin="49,0,0,0"/>
            <Button
					x:Name="CloseDialogButton"
					Width="44"
					Height="44"
					AutomationProperties.Name="Close"
					Background="Transparent"
					BorderBrush="Transparent"
					Click="CloseDialogButton_Click"
					ToolTipService.ToolTip="Close" Margin="556,0,0,0">
                <FontIcon FontSize="12" Glyph="&#xE8BB;"/>
            </Button>
        </Grid>
        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xEA39;" FontSize="43" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,221,0,0"/>
        <TextBlock Text="Snapshot Manager is not available." HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xECC5;" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,488,0,0" Grid.Row="1"/>
        <CheckBox Content="Show AutoProtect snapshots" Margin="44,482,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Margin="399,476,0,0" Width="44" Height="44" Grid.Row="1" VerticalAlignment="Top" ToolTipService.ToolTip="Go To">
            <FontIcon Glyph="&#xE143;"/>
        </Button>
        <Button Margin="448,476,0,0" Width="44" Height="44" Grid.Row="1" VerticalAlignment="Top" ToolTipService.ToolTip="AutoProtect...">
            <FontIcon Glyph="&#xF738;"/>
        </Button>
        <Button x:Name="HelpButton" Width="44" Height="44" Grid.Row="1" VerticalAlignment="Top"
                ToolTipService.ToolTip="Help" Margin="546,476,0,0">
            <FontIcon Glyph="&#xE11B;"/>
        </Button>
        <Button x:Name="CloseButton" Width="44" Height="44" Margin="497,476,0,0" Grid.Row="1" Style="{StaticResource AccentButtonStyle}" VerticalAlignment="Top" Click="CloseButton_Click"
                ToolTipService.ToolTip="Close">
            <FontIcon Glyph="&#xE8BB;"/>
        </Button>
        <Border Grid.Row="1" VerticalAlignment="Bottom" Height="31">
            <TextBlock Text="No items" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="11,0,0,0"/>
        </Border>
    </Grid>
</ContentDialog>
