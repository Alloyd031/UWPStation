<Page
    x:Class="UWPStation.PreferencesPages.WorkspacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPStation.PreferencesPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    Width="800"
	Height="718">

    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0">
            <FontIcon Glyph="&#xE821;" Height="44" Width="44" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBlock Text="Workspace" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource CaptionTextBlockStyle}" FontSize="24" FontWeight="Bold" Margin="49,6,0,0"/>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,59,0,0">
            <TextBlock Text="Default location for virtual machines" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
            <AutoSuggestBox PlaceholderText="C:\VMs" IsEnabled="False" HorizontalAlignment="Left" VerticalAlignment="Top" 
                            VerticalContentAlignment="Center" Width="223" Margin="10,36,0,0" Height="44" CornerRadius="0"/>
            <Button Width="44" Height="44" VerticalAlignment="Top" CornerRadius="0"
                    ToolTipService.ToolTip="Browse" Margin="238,36,0,0" IsEnabled="False">
                <FontIcon Glyph="&#xE11A;"/>
            </Button>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,144,0,0">
            <TextBlock Text="Virtual Machines" VerticalAlignment="Top" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="Bold" FontSize="14" HorizontalAlignment="Left" Margin="10,10,0,0"/>
            <CheckBox Content="Remember opened tabs between sessions" IsChecked="True" Margin="10,29,0,0" VerticalAlignment="Top" CornerRadius="0"/>
            <CheckBox Content="Keep VMs running after UWPStation closes" Margin="10,60,0,0" VerticalAlignment="Top" CornerRadius="0"/>
            <CheckBox Content="Enable all shared folders by default" Margin="10,92,0,0" VerticalAlignment="Top" CornerRadius="0"/>
            <CheckBox Content="Show Aero Peek thumbnails for open tabs" Margin="10,124,0,0" VerticalAlignment="Top" CornerRadius="0"/>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,305,0,0">
            <TextBlock Text="Show tray icon:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,16,0,0" />
            <ComboBox Text="Always" Margin="109,10,0,0" CornerRadius="0">
                <ComboBox.Items>
                    <ComboBoxItem Content="Always" IsSelected="True"/>
                    <ComboBoxItem Content="When virtual machine is powered on"/>
                    <ComboBoxItem Content="Never"/>
                </ComboBox.Items>
            </ComboBox>
            <TextBlock Text="Default hardware compatibility:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0" />
            <ComboBox Text="Always" Margin="208,43,0,0" CornerRadius="0">
                <ComboBox.Items>
                    <ComboBoxItem Content="Not available" IsSelected="True" IsEnabled="False"/>
                </ComboBox.Items>
            </ComboBox>
            <TextBlock Text="Compatible with:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="99,85,0,0"/>
            <CheckBox Content="ESX Server" IsChecked="True" IsEnabled="False" Margin="208,80,0,0" VerticalAlignment="Top" CornerRadius="0"/>
            <TextBlock Text="Seconds between powering on multiple VMs:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,124,0,0"/>
            <muxc:NumberBox HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="0"
                        SpinButtonPlacementMode="Compact" Margin="294,117,0,0" Text="10"/>
            <TextBlock Text="Save screenshots to:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,169,0,0"/>
            <CheckBox Content="Clipboard" Margin="140,164,0,0" VerticalAlignment="Top" IsChecked="True" CornerRadius="0"/>
            <CheckBox Content="File:" Margin="140,196,0,0" VerticalAlignment="Top" IsChecked="True" CornerRadius="0"/>
            <ComboBox Text="Save to Desktop" Margin="243,195,0,0" CornerRadius="0">
                <ComboBox.Items>
                    <ComboBoxItem Content="Always ask for location"/>
                    <ComboBoxItem Content="Save to Desktop" IsSelected="True"/>
                    <ComboBoxItem Content="Browse for custom location..." IsEnabled="False"/>
                </ComboBox.Items>
            </ComboBox>
        </Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,538,0,0">
            <TextBlock Text="Privacy" HorizontalAlignment="Left" VerticalAlignment="Top" Style="{StaticResource CaptionTextBlockStyle}" FontWeight="Bold" FontSize="14" Margin="10,10,0,0"/>
            <CheckBox Content="Offer to save login information for remote hosts" Margin="10,28,0,0" VerticalAlignment="Top" CornerRadius="0"/>
            <Button Content="Show Saved Login Information" Width="220" Height="35" VerticalAlignment="Top" CornerRadius="0" BorderThickness="2,2,2,2" Margin="10,65,0,0">
                <Button.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.ThemeDictionaries>
                            <ResourceDictionary x:Key="Dark">
                                <SolidColorBrush x:Key="ButtonBorderBrush" Color="#333333"/>
                                <SolidColorBrush x:Key="ButtonBackground" Color="#333333"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#333333"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#666666"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#858585"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#4C4C4C"/>
                            </ResourceDictionary>
                            <ResourceDictionary x:Key="Light">
                                <SolidColorBrush x:Key="ButtonBorderBrush" Color="Transparent"/>
                                <SolidColorBrush x:Key="ButtonBackground" Color="#CCCCCC"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#CCCCCC"/>
                                <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#999999"/>
                                <SolidColorBrush x:Key="ButtonForegroundPressed" Color="Black"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPointerOver" Color="#7A7A7A"/>
                                <SolidColorBrush x:Key="ButtonBorderBrushPressed" Color="#CBCBCB"/>
                            </ResourceDictionary>
                        </ResourceDictionary.ThemeDictionaries>
                    </ResourceDictionary>
                </Button.Resources>
            </Button>
        </Grid>
    </Grid>
</Page>
