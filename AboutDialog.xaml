<ContentDialog
    x:Class="UWPStation.Dialogs.AboutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPStation.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Style="{StaticResource DefaultContentDialogStyle}"
    Loaded="ContentDialog_Loaded"
    mc:Ignorable="d">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <x:Double x:Key="ContentDialogMaxWidth">1100</x:Double>
            <Thickness x:Key="ContentDialogPadding">0</Thickness>
        </ResourceDictionary>
    </ContentDialog.Resources>
    <Border>
        <Grid
			x:Name="ContainerGrid"
		    Width="800"
			Height="600"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="44" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE946;" HorizontalAlignment="Left" VerticalAlignment="Center" Height="44" Width="44"/>
                <TextBlock
					HorizontalAlignment="Left"
					VerticalAlignment="Center"
					FontWeight="SemiBold"
					Text="About UWPStation" Margin="49,0,0,0"/>
                <Button
					x:Name="CloseDialogButton"
					Width="44"
					Height="44"
					AutomationProperties.Name="Close"
					Background="Transparent"
					BorderBrush="Transparent"
					Click="CloseDialogButton_Click"
					ToolTipService.ToolTip="Close" Margin="756,0,0,0">
                    <FontIcon FontSize="12" Glyph="&#xE8BB;"/>
                </Button>
            </Grid>
            <Grid Grid.Row="1" Height="49" VerticalAlignment="Top">
                <Button x:Name="InfoButton" Height="49" Width="112"
                    Background="Transparent" BorderBrush="Transparent" Click="InfoButton_Click" Margin="10,0,0,0">
                    <Grid Margin="-53,-24,-56,-25">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE946;" Width="29" Height="29" Margin="0,0,81,0"/>
                        <TextBlock Text="Info" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="35,0,0,0"/>
                    </Grid>
                </Button>
                <Button x:Name="CreatorsButton" Height="49" Width="112"
                    Background="Transparent" BorderBrush="Transparent" Click="CreatorsButton_Click" Margin="127,0,0,0">
                    <Grid Margin="-53,-24,-56,-25">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE125;" Width="29" Height="29" Margin="0,0,81,0"/>
                        <TextBlock Text="Creators" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="35,0,0,0"/>
                    </Grid>
                </Button>
            </Grid>
            <Frame x:Name="ContentFrame" Margin="0,49,0,50" Grid.Row="1"/>
            <Button x:Name="OKButton" Content="OK" Margin="747,514,0,0" Grid.Row="1" Style="{StaticResource AccentButtonStyle}" Click="OKButton_Click" VerticalAlignment="Top"/>
        </Grid>
    </Border>
</ContentDialog>
