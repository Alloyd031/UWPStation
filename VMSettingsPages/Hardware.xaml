<Page
    x:Class="UWPStation.VMSettingsPages.Hardware"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPStation.VMSettingsPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded">

    <Grid>
        <Grid Width="297" HorizontalAlignment="Left">
            <TextBlock Text="Device" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
            <TextBlock Text="Summary" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="149,10,0,0"/>
            <Button x:Name="MemoryButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,34,0,0" Click="MemoryButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE964;" Margin="10,7,260,7"/>
                    <TextBlock Text="Memory" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="2 GB" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="ProcessorsButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,76,0,0" Click="ProcessorsButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE950;" Margin="10,7,260,7"/>
                    <TextBlock Text="Processors" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="2" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="HardDiskButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,118,0,0" Click="HardDiskButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xEDA2;" Margin="10,7,260,7"/>
                    <TextBlock Text="Hard Disk (SCSI)" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="100 GB" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="CDDVDButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,160,0,0" Click="CDDVDButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE958;" Margin="10,7,260,7"/>
                    <TextBlock Text="CD/DVD (IDE)" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="Auto detect" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="NetworkAdapterButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,202,0,0" Click="NetworkAdapterButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xEDA3;" Margin="10,7,260,7"/>
                    <TextBlock Text="Network Adapter" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="NAT" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="USBControllerButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,244,0,0" Click="USBControllerButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE88E;" Margin="10,7,260,7"/>
                    <TextBlock Text="USB Controller" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="Present" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="SoundCardButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,286,0,0" Click="SoundCardButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE15D;" Margin="10,7,260,7"/>
                    <TextBlock Text="Sound Card" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="Auto detect" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button x:Name="DisplayButton" Height="42" Width="297" VerticalAlignment="Top"
                    Background="Transparent" BorderBrush="Transparent" HorizontalAlignment="Center" Margin="0,328,0,0" Click="DisplayButton_Click">
                <Grid Margin="-149,-21,-148,-21">
                    <FontIcon Glyph="&#xE7F4;" Margin="10,7,260,7"/>
                    <TextBlock Text="Display" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="42,0,0,0"/>
                    <TextBlock Text="Auto detect" Style="{StaticResource CaptionTextBlockStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="149,0,0,0"/>
                </Grid>
            </Button>
            <Button VerticalAlignment="Bottom" Width="44" Height="44" Margin="243,0,0,10" ToolTipService.ToolTip="Remove">
                <FontIcon Glyph="&#xE108;"/>
            </Button>
            <Button VerticalAlignment="Bottom" Width="44" Height="44" Margin="194,0,0,10" ToolTipService.ToolTip="Add...">
                <FontIcon Glyph="&#xE109;"/>
            </Button>
        </Grid>
        <Frame x:Name="HardwareFrame" Margin="297,0,0,0"/>
    </Grid>
</Page>
